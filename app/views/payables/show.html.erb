<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @payable %>

    <%= link_to "Editar", edit_payable_path(@payable), class: "btn-primary" %>
    <%= link_to "Regresar", payables_path, class: "btn-primary" %>
    <div class="inline-block ml-2">
      <%= button_to "Eliminar", @payable, method: :delete, class: "btn-danger" %>
    </div>
  </div>
</div>
