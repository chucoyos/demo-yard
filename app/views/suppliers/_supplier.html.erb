<div id="<%= dom_id supplier %>" class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 max-w-md mx-auto">
  <h2 class="text-xl font-bold text-gray-800 border-b pb-2 mb-4">
    Detalles del Proveedor
  </h2>

  <div class="space-y-4">
    <div>
      <strong class="text-gray-700 block text-sm uppercase tracking-wide">Nombre</strong>
      <p class="text-lg font-medium text-gray-900"><%= supplier.name %></p>
    </div>

    <div>
      <strong class="text-gray-700 block text-sm uppercase tracking-wide">Contacto</strong>
      <p class="text-lg text-gray-800"><%= supplier.contact %></p>
    </div>

    <div>
      <strong class="text-gray-700 block text-sm uppercase tracking-wide">Phone</strong>
      <p class="text-lg text-gray-800">
        📞 <a href="tel:<%= supplier.phone %>" class="text-blue-600 hover:underline"><%= supplier.phone.gsub(/(\d{3})(\d{3})(\d{4})/, '\1 \2 \3') %></a>
      </p>
    </div>

    <div>
      <strong class="text-gray-700 block text-sm uppercase tracking-wide">Email</strong>
      <p class="text-lg text-gray-800">
        ✉️ <a href="mailto:<%= supplier.email %>" class="text-blue-600 hover:underline"><%= supplier.email %></a>
      </p>
    </div>
  </div>
</div>

